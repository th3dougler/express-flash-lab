<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Compiled and minified CSS -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      
      <!-- Modal Trigger -->
      <div class="row">
        <div class="col s10">
          <h4>Free Format Blog - Express Flash / Toasts Demo</h4>
        </div>
        <div class="col s1">
          <div class="input-field">
          <a
            class="waves-effect waves-light btn-floating light-blue modal-trigger center"
            href="#modal1"
            ><i class="material-icons">add</i></a
          >
        </div>
        </div>
      </div>

      <!-- Modal Structure -->
      <div id="modal1" class="modal">
        <div class="modal-content">
          <div class="card-content">
            <form action="/" method="POST">
              <div class="input-field col s12">
                <input
                  id="name"
                  name="name"
                  type="text"
                  class="validate"
                  value="bobRoss"
                  required
                />
                <label for="name">Name</label>
              </div>
              <div class="input-field col s12">
                <input
                  id="title"
                  name="title"
                  type="text"
                  class="validate"
                  value="no mistakes, only happy accidents"
                  required
                />
                <label for="title">Title</label>
              </div>
              <div class="input-field col s12">
                <textarea
                  id="message"
                  name="message"
                  class="materialize-textarea"
                >
Lorem ipsum dolor sit, amet consectetur adipisicing elit. Dolorum laborum debitis reprehenderit.</textarea
                >
                <label for="message">Message: </label>
              </div>

              <button class="btn light-blue" type="submit">Post</button>
            </form>
          </div>
        </div>
      </div>

      <% all_posts.forEach(post=>{ %>
      <div class="row">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <div class="card-title"><%= post.title %></div>
              <span class="grey-text"
                ><%= post.name %> @ <%= post.createdAt %></span
              >
              <p><%= post.message %></p>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      M.AutoInit();
    });

    if ("<%= flash.success %>") {
      M.toast({ html: "<%= flash.success %>", classes: "rounded green" });
    } else if ("<%= flash.failure %>") {
      M.toast({ html: "<%= flash.failure %>", classes: "rounded red" });
    }
  </script>
</html>
